{
  "name": "well-volume-calculator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "pretest": "node -e \"const v=process.versions.node.split('.').map(n=>parseInt(n,10)); if(v[0]<20 || (v[0]===20 && v[1]<19)){console.error('ERROR: Node >= 20.19.0 is required to run tests locally. Current version:', process.versions.node); process.exit(1);} else process.exit(0);\"",
    "smoke:http": "node tools/qa/simple_static_server.cjs & node tools/qa/run_p9_smoke_puppeteer.cjs",
    "smoke:uc": "node tools/qa/simple_static_server.cjs & node tools/qa/run_uc_fit_smoke_puppeteer.cjs",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "format": "prettier --write \"src/**/*.{js,css,html,md}\"",
    "test:run": "vitest run --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/eslint-plugin": "^1.6.6",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^8.0.3",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^2.8.8",
    "puppeteer": "^24.35.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "src/**/*.{js,css,html,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
